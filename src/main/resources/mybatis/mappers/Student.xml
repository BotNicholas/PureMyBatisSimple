<?xml version = "1.0" encoding = "UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--Now i've specified mapper. MyBatis will automatically create implementation for given mapper interface-->
<mapper namespace = "StudentNamespace">

    <insert id = "insert" parameterType = "Student">
        INSERT INTO student (NAME, BRANCH, PERCENTAGE, PHONE, EMAIL ) VALUES (#{name}, #{branch}, #{percentage}, #{phone}, #{email});

# needed to obtain generated id
<!--        <selectKey keyProperty = "id" resultType = "int" order = "AFTER">-->
<!--            select last_insert_id() as id-->
<!--        </selectKey>-->
    </insert>



    <resultMap id="student_result" type="Student">
        <result property="id" column="ID"/>
        <result property="name" column="NAME"/>
        <result property="branch" column="BRANCH"/>
        <result property="percentage" column="PERCENTAGE"/>
        <result property="phone" column="PHONE"/>
        <result property="email" column="EMAIL"/>
    </resultMap>

    <select id="getAll" resultMap="student_result">
        select * from student;
    </select>

    <select id="getById" resultMap="student_result" parameterType="int">
        select * from student where ID = #{id};
    </select>

</mapper>